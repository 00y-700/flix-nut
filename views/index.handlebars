
<div class="container">
    {{!-- buttons and user profile pic --}}
    <div class="row">
        {{!-- search movies button --}}
        <div class="col-md-3 text-center">
			<form action="" class="search-form" method="POST">
				<input type="text" class="form control" name="" id="search">
				<button type="button" class="btn btn-dark" id="searchBTN">Search</button>
			</form>
		</div>
        {{!-- view what you want to watch list --}}
        <div class="col-md-3 text-center">
			<form action="" class="watch-form" method="POST">
				<input type="text" class="form control" name="" id="watch">
				<button type="submit" class="btn btn-info" id="watchBTN">To Watch</button>
			</form>
		</div>
        {{!-- image/link to show signed in and profile --}}
        <div class="col-md-3">
            <a href="" class="userPic">
                <img src="user profile pic" alt="profile-pic" height="" width="" id="picture">
            </a>
        </div>
    </div>
    {{!-- ratings --}}
    <div class="row">
        <div class="col-md-3 text-center">
            {{yourRating}}<br>
            <p>Your Rating</p>
        </div>
        <div class="col-md-3 text-center">
            {{this.vs}}
        </div>
        <div class="col-md-3 text-center">
            {{MobRating}}<br>
            <p>Mob Rating</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
           <div class="dropdown show">
             <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item" href="#">Your Rating</a>
                <a class="dropdown-item" href="#">Mob Rating</a>
                <a class="dropdown-item" href="#">Date Added</a>
                </div>
            </div> 
        </div>
    </div>
    {{!-- body --}}
    <div class="col-lg-12">
        <ul>
            <li>
                <div class="row">
                    <div class="col-md-9 card" data-toggle="collapse">
                        <div class="card-body">
                            <form action="" class="search-form" method="GET">
				                <h5 class="card-title">{{Movie Title}}</h5>
                                <p class="card-text">{{Movie Description}}</p>
                                <div class="row">
                                    <div class="col-md-3">
                                        <p>Your Rating</p>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                    </div>
                                    <div class="col-md-3">
                                        <p>Mob Rating</p>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                    </div>
                                </div>
			                </form> 
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>

